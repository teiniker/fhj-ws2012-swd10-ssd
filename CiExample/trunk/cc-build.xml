<project name="CiExample" default="build" basedir=".">
	<property name="src" location="src" />
	<property name="templates" location="templates" />
  	<property name="build" location="build-ant" />
  	<property name="lib" location="lib" />
  	<property name="doc" location="doc" />
  	<property name="install" location="dist" />
	
	<property name="svn.url.https.authenticated" value="https://fhj-ws2012-swd10-ssd.googlecode.com/svn/CiExample/trunk"/> 
		<!-- Note: Anonymous svn url for checkout only, if checkins are necessary, use https path --> 	
	<property name="svn.url.http.anonymous" value="http://fhj-ws2012-swd10-ssd.googlecode.com/svn/CiExample/trunk"/> 
	<property name="svn.repository" value="${basedir}/CiExample"/>

	<property name="svn.anttask.lib" location="vendor/svnant-1.3.0/lib"/>
	<!-- Use Subclipse Svn Task Library -->
	    <path id="svnant.classpath">
	        <fileset dir="${svn.anttask.lib}">
	            <include name="**/*.jar"/>
	        </fileset>
	    </path>
	<typedef resource="org/tigris/subversion/svnant/svnantlib.xml" classpathref="svnant.classpath" /> 
	
<target name="build">
		<delete dir="${build}" /> 
	 	<delete dir="${install}" /> 
	 	<delete dir="${doc}" /> 
	  	<delete dir="${lib}" /> 
		

	
		<!-- 
			   	<fail unless="cc.svn.username" message="cc.svn.username (and password) properties not found!"/>
					<echo message="Svn Username: ${cc.svn.username}"/>
					
					<svn javahl="false" username ="${cc.svn.username}" password = "${cc.svn.username}"> 
		  				<checkout url="${svn.url.https.authenticated}" destPath="${svn.repository}" />  
		  		</svn>
		  -->
		<svn javahl="false" >
    	    <checkout url="${svn.url.http.anonymous}" destPath="${svn.repository}" />  
    </svn>
	
	<svn javahl="false" >
    	    		<checkout url="${svn.url.http.anonymous}" destPath="${svn.repository}" />  
    		</svn>
	<ant antfile="build.xml" dir="${basedir}/CiExample" target="install" />
</target>
</project>