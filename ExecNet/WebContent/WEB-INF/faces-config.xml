<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">

    <application>
        <message-bundle>at.fhj.swd.i18n.messages</message-bundle>
        <locale-config>
            <default-locale>en</default-locale>
            <supported-locale>de_AT</supported-locale>
            <supported-locale>de_DE</supported-locale>
            <supported-locale>de</supported-locale>
        </locale-config>
    </application>

    <managed-bean>
        <managed-bean-name>userBean</managed-bean-name>
        <managed-bean-class>at.fhj.swd.controller.UserBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>newsBean</managed-bean-name>
        <managed-bean-class>at.fhj.swd.controller.NewsBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>communityBean</managed-bean-name>
        <managed-bean-class>at.fhj.swd.controller.CommunityBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>postBean</managed-bean-name>
        <managed-bean-class>at.fhj.swd.controller.PostBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>pinboardBean</managed-bean-name>
        <managed-bean-class>at.fhj.swd.controller.PinBoardBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>documentBean</managed-bean-name>
        <managed-bean-class>at.fhj.swd.controller.DocumentBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>sstFileBean</managed-bean-name>
        <managed-bean-class>at.fhj.swd.controller.SSTFileBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>user</managed-bean-name>
        <managed-bean-class>at.fhj.swd.domain.User</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>commentBean</managed-bean-name>
        <managed-bean-class>at.fhj.swd.controller.CommentBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>activityPostBean</managed-bean-name>
        <managed-bean-class>at.fhj.swd.controller.ActivityPostBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>navigationBean</managed-bean-name>
        <managed-bean-class>at.fhj.swd.controller.NavigationBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>emailBean</managed-bean-name>
        <managed-bean-class>at.fhj.swd.controller.EmailBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>emailsenderBean</managed-bean-name>
        <managed-bean-class>at.fhj.swd.controller.EmailSenderBean</managed-bean-class>
        <managed-bean-scope>application</managed-bean-scope>
    </managed-bean>

</faces-config>
