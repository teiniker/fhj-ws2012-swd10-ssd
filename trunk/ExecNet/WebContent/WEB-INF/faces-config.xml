<?xml version="1.0" encoding="UTF-8"?>

<faces-config xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
    version="2.0">

    <managed-bean>
        <managed-bean-name>userBean</managed-bean-name>
        <managed-bean-class>at.fhj.swd.controller.UserBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
        <managed-bean>
        <managed-bean-name>newsBean</managed-bean-name>
        <managed-bean-class>at.fhj.swd.controller.NewsBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>communityBean</managed-bean-name>
        <managed-bean-class>at.fhj.swd.controller.CommunityBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>postBean</managed-bean-name>
        <managed-bean-class>at.fhj.swd.controller.PostBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>pinboardBean</managed-bean-name>
        <managed-bean-class>at.fhj.swd.controller.PinBoardBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>documentBean</managed-bean-name>
        <managed-bean-class>at.fhj.swd.controller.DocumentBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>sstFileBean</managed-bean-name>
        <managed-bean-class>at.fhj.swd.controller.SSTFileBean</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>    
    <managed-bean>
        <managed-bean-name>user</managed-bean-name>
        <managed-bean-class>at.fhj.swd.domain.User</managed-bean-class>
        <managed-bean-scope>session</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>comment</managed-bean-name>
        <managed-bean-class>at.fhj.swd.controller.CommentBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>activityPostBean</managed-bean-name>
        <managed-bean-class>at.fhj.swd.controller.ActivityPostBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>
    <managed-bean>
        <managed-bean-name>navigationBean</managed-bean-name>
        <managed-bean-class>at.fhj.swd.controller.NavigationBean</managed-bean-class>
        <managed-bean-scope>request</managed-bean-scope>
    </managed-bean>

    <!-- TODO: check navigation rules -->
    <navigation-rule>
        <display-name>usersettings.xhtml</display-name>
        <from-view-id>/usersettings.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>user-edited</from-outcome>
            <to-view-id>/index.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <display-name>lessons.xhtml</display-name>
        <from-view-id>/lessons.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>logged-out</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <display-name>courses.xhtml</display-name>
        <from-view-id>/courses.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>logged-out</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <display-name>tasks.xhtml</display-name>
        <from-view-id>/tasks.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>logged-out</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <display-name>register.xhtml</display-name>
        <from-view-id>/register.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>logged-out</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <display-name>usersettings.xhtml</display-name>
        <from-view-id>/usersettings.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>logged-out</from-outcome>
            <to-view-id>/login.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <display-name>lessons.xhtml</display-name>
        <from-view-id>/lessons.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>name-set</from-outcome>
            <to-view-id>/courses.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>

</faces-config>
